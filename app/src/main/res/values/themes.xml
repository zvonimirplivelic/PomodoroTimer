<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/red_medium</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PomodoroTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PomodoroTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PomodoroTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>